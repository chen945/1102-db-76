<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />
        <title>Shops</title>
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        />
    </head>
    <body>
        <div class="container" style="margin-top: 50px">
            <h5>207410076-謝昀辰</h5>
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-pills w-100">
                        <li class="nav-pill active">
                            <a class="nav-link">Shops</a>
                        </li>
                        <li class="nav-pill ml-auto">
                            <a class="nav-link active" href="/shop_76/create"
                                >Add Shop</a
                            >
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <% if(data.length) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Cat_id</th>
                                <th scope="col">Price</th>
                                <th scope="col">Remote_URL</th>
                                <th scope="col">Local_URL</th>
                                <th width="200px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i< data.length; i++) { %>
                            <tr>
                                <th scope="row"><%= data[i].id %></th>
                                <td><%= data[i].name%></td>
                                <td><%= data[i].cat_id%></td>
                                <td><%= data[i].price%></td>
                                <td><%= data[i].remote_url%></td>
                                <td><%= data[i].local_url%></td>

                                <td>
                                    <a
                                        class="btn btn-success edit"
                                        href="/shop_76/edit/<%=data[i].id%>"
                                        >Edit</a
                                    >
                                    <a
                                        class="btn btn-danger delete"
                                        onclick="return alert('Are You sure?')"
                                        href="/shop_76/delete/<%=data[i].id%>"
                                        >Delete</a
                                    >
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% } %>

                    <!-- if result is empty -->
                    <% if(!data.length) { %>
                    <p class="text-center">No Shop found!</p>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>
